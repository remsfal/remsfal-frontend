{
  "name": "remsfal-frontend",
  "version": "0.0.2",
  "private": true,
  "type": "module",
  "homepage": "https://remsfal.de",
  "license": "MIT",
  "repository": "github:remsfal/remsfal-frontend",
  "scripts": {
    "dev": "vite",
    "build": "run-s type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "coverage": "vitest run --coverage",
    "cypress": "cypress open",
    "test": "run-s test:unit test:e2e",
    "test:unit": "vitest run",
    "test:unit:dev": "vitest",
    "test:component": "start-server-and-test preview http://localhost:4173 'cypress run --component'",
    "test:component:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --component'",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e && nyc report --reporter=html'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint --quiet",
    "lint:report": "mkdir -p reports && eslint --format json --output-file reports/eslint-report.json",
    "lint:fix": "eslint --fix",
    "format": "prettier --write src/",
    "stylelint": "stylelint '{src,public}/**/*.{vue,css,scss}'",
    "stylelint:fix": "stylelint --fix '{src,public}/**/*.{vue,css,scss}'",
    "openapi": "run-p openapi:chat openapi:platform openapi:notification",
    "openapi:lint": "openapi-cli lint openapi/chat-spec.json",
    "openapi:chat": "openapi-typescript openapi/chat-spec.json -o src/services/api/chat-schema.ts",
    "openapi:platform": "openapi-typescript openapi/platform-spec.json -o src/services/api/platform-schema.ts",
    "openapi:notification": "openapi-typescript openapi/notification-spec.json -o src/services/api/notification-schema.ts"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.1",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.1",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@primevue/themes": "^4.3.7",
    "axios": "^1.12.2",
    "chart.js": "^4.4.8",
    "chartjs-plugin-datalabels": "^2.2.0",
    "idb": "^8.0.3",
    "lightningcss": "^1.30.1",
    "msw": "^2.11.3",
    "pinia": "^3.0.3",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.7",
    "vue": "^3.5.21",
    "vue-axios": "^3.5.0",
    "vue-i18n": "^10.0.8",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.5",
    "@intlify/eslint-plugin-vue-i18n": "^3.2.0",
    "@pinia/testing": "^1.0.2",
    "@primevue/auto-import-resolver": "^4.3.5",
    "@redocly/cli": "^2.1.2",
    "@stylistic/eslint-plugin-js": "^4.4.1",
    "@tailwindcss/postcss": "^4.1.10",
    "@tsconfig/node-lts": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.3",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/devtools": "^8.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.21",
    "chai": "^6.0.1",
    "cypress": "^14.5.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-cypress": "^5.1.0",
    "eslint-plugin-prettier": "5.5.1",
    "eslint-plugin-vue": "^10.4.0",
    "flush-promises": "^1.0.2",
    "globals": "16.3.0",
    "jsdom": "^27.0.0",
    "npm-run-all2": "^8.0.4",
    "nyc": "^17.1.0",
    "openapi-typescript": "^7.8.0",
    "postcss": "^8.5.3",
    "prettier": "^3.6.2",
    "sass": "^1.92.1",
    "sinon": "^21.0.0",
    "start-server-and-test": "^2.0.13",
    "stylelint": "^16.21.1",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^38.0.0",
    "tailwindcss": "^4.1.6",
    "tailwindcss-primeui": "^0.6.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "unplugin-vue-components": "^29.0.0",
    "vite": "^7.1.5",
    "vite-plugin-istanbul": "^7.1.0",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.1.4",
    "vue-i18n-extract": "^2.0.7",
    "vue-tsc": "^3.0.4"
  },
  "overrides": {
    "glob": "^9.3.2",
    "vite-plugin-vue-devtools": {
      "vite-plugin-inspect": "^11.3.0"
    }
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.43.0"
  }
}
