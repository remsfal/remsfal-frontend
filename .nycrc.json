{
  "report-dir": "coverage-cypress",
  "reporter": ["html", "lcov", "text", "json"],
  "all": true,
  "extension": [".ts", ".vue"],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/*.cy.ts",
    "**/*.cy.js",
    "test/**",
    "cypress/**",
    "node_modules/**",
    "dist/**",
    "scripts/**",
    "public/**",
    "src/assets/**",
    "src/services/api/*-schema.ts",
    "coverage-cypress/**",
    "coverage-vitest/**",
    "coverage/**",
    "*.d.ts",
    "*.config.cjs",
    "*.config.js",
    "*.config.ts"
  ]
}
